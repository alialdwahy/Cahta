<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.ChatFrage">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatMessage"
        android:padding="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@id/getMessage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <EditText

        android:id="@+id/getMessage"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingStart="@dimen/_10sdp"
        android:hint="@string/write_ur_message"
        android:backgroundTint="@color/openGray"
        android:background="@drawable/gray_edit_text"
        android:gravity="start|center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_40sdp"/>
    <ImageView
        android:id="@+id/send"
        android:backgroundTint="@color/colorPrimary"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/ic_send"
        android:background="@drawable/circl"
        app:layout_constraintStart_toEndOf="@id/getMessage"
        app:layout_constraintTop_toTopOf="@id/getMessage"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_height="@dimen/_40sdp"
        app:tint="@color/colorAccent" />
</androidx.constraintlayout.widget.ConstraintLayout>